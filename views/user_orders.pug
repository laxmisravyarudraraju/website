extends user

block content
    .orders__body
        .recent.recent-order
            .recent__heading.recent-order__heading Your Orders
            ul.orders__box
                each order in orders
                    li.orders__item
                        .orders__content
                            .recent__heading--side.recent-order__heading--side Order 
                                span.orders__number ##{order._id}
                                span.orders__statusTag In Progress
                            .recent-order__item
                                .recent-order__item--heading Plan:
                                .recent-order__item--info.recen-order__plan #{order.plan.name}
                            .recent-order__item
                                .recent-order__item--heading Order Date:
                                .recent-order__item--info.recent-order__orderDate #{order.orderPlaced.toDateString()}
                            .recent-order__item
                                .recent-order__item--heading Delivery Date:
                                .recent-order__item--info.recent-order__deliveryDate #{order.deliveryDate.toDateString()}
                            .recent-order__item
                                .recent-order__item--heading Price:
                                .recent-order__item--info.recent-order__paidAmount $#{order.orderPrice.toFixed(2)}
                        .order__buttons.recent-order__buttons
                            a(href="#").recent-order__links.btn.btn-inline.btn-progress Status
                            a(href="#").recent-order__links.btn.btn-inline.btn-invoice.btn-green Invoice